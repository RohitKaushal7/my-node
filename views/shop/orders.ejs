<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="css/404.css">
</head>
<body>
        <%- include('../includes/nav.ejs') %> 
        <main>
            <div class="container">
                <% for(order of orders) { %> 
                    <div class="card ">
                        <div class="card-content">
                            <span class="card-title">Order # <%= order._id %>  </span>
                            <ul class="collection">
                                <% for (prod of order.products) { %>
                                    <li class="collection-item"> <%= prod.title %> <span class="badge green white-text"><%= prod.qty %> </span> </li>
                                <% } %>  
                            </ul>
                            <div class=" blue-text green lighten-4"><b> <%= order.user.name %> </b> | <%= order.user._id %> </div>
                        </div>
                        <div class="card-action">
                            <a href="#" class="blue-text">Delivered</a>
                            <a href="#" class="grey-text">Cancel</a>
                        </div>
                    </div>
                <% } %> 
            </div>
        </main>
<%- include('../includes/end.ejs') %> 